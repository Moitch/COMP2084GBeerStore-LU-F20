@model IEnumerable<COMP2084BeerStore.Models.Category>

<h1>Welcome to the COMP2084 Beer Store</h1>

<a asp-controller="Store" asp-action="AddCategory">Add a New Category</a>

<ul>
    @foreach (var c in Model)
    {
        <li>
            <a asp-controller="Store" asp-action="Browse" asp-route-category="@c.Name">@c.Name</a>
        </li>
    }
</ul>

